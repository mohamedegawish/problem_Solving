#include <bits/stdc++.h>
using namespace std;
#define ll long long
int main() {
    ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    ll n;
    cin>>n;
    for(int i=1;i<=n;i++){
        for(int j=n;j>i;j--){
            cout<<" ";
        }
        for(int k=0;k<i;k++){
            if(k==0){
                cout<<"*";
            }
            else cout<<"**";
        }
        cout<<endl;

    }
    for(int i=n;i>=1;i--){
        for(int j=n;j>i;j--){
            cout<<" ";
        }
        for(int k=0;k<i;k++){
            if(k==0){
                cout<<"*";
            }
            else cout<<"**";
        }
        cout<<endl;

    }
}
