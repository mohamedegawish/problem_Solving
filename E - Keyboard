#include <bits/stdc++.h>
using namespace std;
#define ll long long
pair<int,int>a[1000];
int main() {
    ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
    char shiftedDirection;string text;cin>>shiftedDirection>>text;
    string keyboard="qwertyuiopasdfghjkl;zxcvbnm,./";
    for(int i=0;i<text.size();i++){
            ll indexx=keyboard.find(text[i]);
        if(shiftedDirection=='R'){
            cout<<keyboard[indexx-1];
        }
        else{
            cout<<keyboard[indexx+1];

        }
    }
}
