
#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define all(v) v.begin(), v.end()
 
int main() {
    ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
    ll x;cin>>x;
    for(int i=1;i<=x;i++){
        for(int j=1;j<=x;j++){
            if((i*j>x)&&(i%j==0)&&(i/j<x)){
                cout<<i<<" "<<j<<endl;
                return 0;
            }
        }
    }
    cout<<"-1\n";
    return 0;
}
